<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <View
        android:id="@+id/statusBarBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <!-- Top toolbar -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="?attr/colorPrimary"
            android:orientation="horizontal"
            android:paddingHorizontal="13dp">

            <!-- Main Menu -->
            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:contentDescription="Menu"
                android:src="@drawable/menu" />

            <!-- Undo -->
            <ImageButton
                android:id="@+id/btnUndo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:contentDescription="Undo"
                android:src="@drawable/undo" />

            <!-- Redo -->
            <ImageButton
                android:id="@+id/btnRedo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:contentDescription="Redo"
                android:src="@drawable/redo" />

            <!-- Tools (13 options) -->
            <ImageButton
                android:id="@+id/btnTools"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:contentDescription="Tools"
                android:src="@drawable/tools" />

            <!-- Brush -->
            <ImageButton
                android:id="@+id/btnEraser"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:contentDescription="pencil"
                android:src="@drawable/eraser" />

            <!-- Color Picker -->
            <ImageButton
                android:id="@+id/Brushbtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:contentDescription="brush"
                android:src="@drawable/brush" />

            <ImageButton
                android:id="@+id/btnColorPicker"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:contentDescription="Color Picker"
                android:src="@drawable/color_wheel" />

            <!-- Layers -->
            <ImageButton
                android:id="@+id/btnLayers"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:contentDescription="Layers"
                android:src="@drawable/layer" />

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/canvasContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Drawing Canvas -->
        <com.example.DrawMate.DrawingView
            android:id="@+id/drawingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <!-- Include Brush Panel -->
        <include
            android:id="@+id/brushPanel"
            layout="@layout/brush_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            android:translationY="-600dp"
            android:elevation="20dp" />

        <ImageButton
            android:id="@+id/btnRestoreToolbar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="top|end"
            android:layout_margin="13dp"
            android:src="@drawable/layer1"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:elevation="30dp" />

    </FrameLayout>


</LinearLayout>
