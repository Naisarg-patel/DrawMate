<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/brushSettingsTab"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Brush preview area (like red section) -->


    <!-- Brush size -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brush Size"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="12dp"/>

    <SeekBar
        android:id="@+id/sizeSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="20"/>

    <!-- Opacity -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opacity"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="12dp"/>

    <SeekBar
        android:id="@+id/opacitySeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="255"
        android:progress="255"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size With Heavy Pressure"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="12dp"/>

    <SeekBar
        android:id="@+id/sizewithheavypressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="80"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size With Light Pressure"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="12dp"/>

    <SeekBar
        android:id="@+id/sizewithlightpressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opacity With Heavy Pressure"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="12dp"/>

    <SeekBar
        android:id="@+id/opacitywithheavypressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="70"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opacity With Light Pressure"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="12dp"/>

    <SeekBar
        android:id="@+id/opacitywithlightpressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="70"/>

</LinearLayout>
